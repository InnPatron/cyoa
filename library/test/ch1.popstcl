mset dispfont common;
display "Hello world";

clear-options;
option "Change Display" { display "Changed to something else!"; };
option "NOP" { };
option "Continue" { 
	test_consequence;
};

proc test_consequence {
	display "NEXT";
	clear-options;
	option "Test" { end; };
};

proc end {
	display "END";
	clear-options;

	mset background "test";
	state 1;
};
